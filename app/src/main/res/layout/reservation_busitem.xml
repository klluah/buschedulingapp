<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:backgroundTint="#FFFFFF">

    <ScrollView
        android:id="@+id/scroll_resbusitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="2dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="53dp">

                        <TextView
                            android:id="@+id/ritenumberofreservation"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="7"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="Reservation"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp">

                        </TextView>

                        <TextView
                            android:id="@+id/ritemplatenumber"
                            android:layout_width="93dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="6"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="Plate Number"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp">

                        </TextView>

                        <TextView
                            android:id="@+id/ritemdestination"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Destination"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp">

                        </TextView>

                        <TextView
                            android:id="@+id/ritemdeptime"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Departure Time"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/ritemarrivaltime"
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"

                            android:text="Arrival Time"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp"></TextView>

                        <TextView
                            android:id="@+id/irdriver"
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Driver"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9sp"></TextView>

                        <TextView
                            android:id="@+id/irfare"
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Fare"
                            android:textAlignment="center"
                            android:textSize="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:id="@+id/view_btn"
        android:layout_width="42dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:background="#6E7273"
        android:backgroundTint="#6E7273"
        android:foregroundGravity="center_vertical"
        android:text="View"
        android:textColor="#ffffff"
        android:textSize="9sp" />

</androidx.cardview.widget.CardView>