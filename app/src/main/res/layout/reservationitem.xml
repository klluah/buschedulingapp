<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundTint="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3dp"
                android:text="Pending"
                android:textAlignment="textEnd"
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/rstatusimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pending" />
        </LinearLayout>

        <TextView
            android:id="@+id/rbusname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/rubik_medium"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Bus Name"
            android:textAlignment="textStart"
            android:textColor="#98CEFC"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/departuretimetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:text="Departure Time:"
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rdeparturetime"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/destinationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:text="Destination:"
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rdestination"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text=""
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/platenumbertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:text="Plate Number:"
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rplatenumber"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reservationidtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="12dp"
                    android:text="RESERVATION ID:"
                    android:textColor="@color/com_facebook_likeboxcountview_border_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rresid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="1242"
                    android:textColor="@color/com_facebook_likeboxcountview_border_color"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:foregroundGravity="right"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/reservedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:foregroundGravity="right"
                android:gravity="end"
                android:text="mm/dd/yyyy"
                android:textColor="@color/com_facebook_likeboxcountview_border_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>