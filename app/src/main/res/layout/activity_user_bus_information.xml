<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.busschedulingap.busschedulingapp.user.User_Bus_Information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/back_toolbar" />


        <ImageView
            android:id="@+id/busimagebusinfouser"
            android:layout_width="290dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/busfilter" />

        <TextView
            android:id="@+id/busnamebusinfouser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Bus Name"
            android:textAlignment="center"
            android:textColor="#98CEFC"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Available Seats "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/availseatsbusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Destination "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/destinationbusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Departure Time "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/deptimebusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Arrival Time "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/arrtimebusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Driver "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/driverbusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Fare "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/farebusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Plate Number"
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/platenumberbusinfouser"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/reserveseatbtn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#98CEFC"
            android:text="Make Reservation" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>