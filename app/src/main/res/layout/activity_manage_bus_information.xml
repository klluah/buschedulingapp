<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/drawer_layout"
    tools:context="com.busschedulingap.busschedulingapp.admin.ManageBusInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/admin_toolbar" />

        <ImageView
            android:id="@+id/busimagebusinfo"
            android:layout_width="290dp"
            android:layout_height="106dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/busfilter" />

        <TextView
            android:id="@+id/busnamebusinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rubik_bold"
            android:text="Bus Name"
            android:textAlignment="center"
            android:textColor="#98CEFC"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Available Seats "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/availseatsbusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Destination "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/destinationbusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Departure Time "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/deptimebusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Arrival Time "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/arrtimebusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Driver "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/driverbusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Fare "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/farebusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="Plate Number   "
                android:textAlignment="viewEnd"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/platenumberbusinfo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/rubik_medium"
                android:text=""
                android:textSize="14dp" />
        </LinearLayout>

        <!--<Button
            android:id="@+id/nextbtn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#98CEFC"
            android:backgroundTint="#98CEFC"
            android:text="Edit Info" />-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/admin_nav_drawer" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>