<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scroll_resbusitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/irresid1"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="7"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="Reservation ID"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp">

                        </TextView>

                        <TextView
                            android:id="@+id/irfullname1"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="6"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:padding="10sp"
                            android:text="   Full Name   "
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp">

                        </TextView>

                        <TextView
                            android:id="@+id/irnumber1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Mobile Number"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp"/>

                        <TextView
                            android:id="@+id/irdestination1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Destination"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9dp" />

                        <TextView
                            android:id="@+id/irdeptime1"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Departure Time"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/irdriver1"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:background="#ffffff"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Driver"
                            android:textAlignment="center"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/irfare1"
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_horizontal"
                            android:layout_weight="4"
                            android:fontFamily="@font/montserrat_semibold"
                            android:padding="10sp"
                            android:text="Fare"
                            android:textAlignment="center"
                            android:textSize="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</androidx.cardview.widget.CardView>